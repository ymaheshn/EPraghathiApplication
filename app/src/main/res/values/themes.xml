<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EPraghathiRoomDBApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="custom_textinput_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/navy_blue</item>
        <item name="colorControlActivated">@color/red_dark2</item>
        <item name="colorControlHighlight">@color/purple_200</item>
    </style>


    <style name="MaterialAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColor">@color/color_black</item>
        <item name="buttonBarNeutralButtonStyle">@style/MaterialAlertDialogButtonStyle</item>
        <item name="android:dialogMessage">@style/MaterialAlertDialogTextStyle</item>
        <item name="windowMinWidthMajor">0dp</item>

        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialogButtonStyle</item>

    </style>

    <style name="MaterialAlertDialogTextStyle" parent="Base.MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/color_black</item>
    </style>

    <style name="MaterialAlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>